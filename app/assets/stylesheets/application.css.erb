@font-face {
  font-family: Copperplate;
  src: url('<%= asset_path 'Copperplate.otf' %>');
}

@font-face {
  font-family: Copperplate-Bold;
  src: url('<%= asset_path 'Copperplate-Bold.otf' %>');
}

@font-face {
  font-family: Copperplate-Light;
  src: url('<%= asset_path 'Copperplate-Light.otf' %>');
}

body {
  background-color: #353131;
  color: #d8b642;
}

a {
  color: #d8b642;
}

section, header {
  float: left;
  clear: left;
  display: block;
  overflow: hidden;
}

header, .main_content {
  clear: left;
  padding: 1.5em 3.8em;
  width: 910px;
  padding-right: 0em;
  margin-left: 1em;
}

header{
}

h1 {
  margin: 0 0 0 0;
}

h1 a {
  text-decoration: none;
  letter-spacing: .4em;
  font-size: 1em;
  font-weight: normal;
  font-family: Copperplate-Light;
}

span.super {
    font-size: 125%;
    font-family: Copperplate;
}

nav ul { position:relative; right:1px; display: none; }
nav ul li { display: inline; }

nav li a {
  display: inline-block;
  text-indent: -9999px;
}


nav .home a {
}

nav .contact a {
}


.image_info {
  clear:none;
  width: 515px;
}


.image_info h3 {
  margin: 0;
}


.thumbs ul {
  width:217px;
  padding: 0;
  margin: 0;
}


.thumbs ul li {
  display: inline-block;
  position:relative;
}

.thumbs ul li input {
    display:none;
    width: 1.5em;
    position:absolute;
    left: 0px;
    top: 0px;
}

.thumbs ul li a {
  display: inline-block;
  margin-bottom: 5px;
  margin-right: 5px;
}

.wrap{
}

.wrap div.fullsize {
    overflow: hidden;

}

.wrap .fullsize a {
  position: absolute;
  top: 20px;
  display: inline;
}

.wrap .fullsize a h4 {
    width: 100%;
}






.gallerycontainer{
    position: relative;
    padding: 145px;
    height: 466px;
    top:-15px;
    left:-80px;

/*Add a height attribute and set to largest image's height to prevent overlaying*/
}

.thumbnail img{
    border: 0px solid white;
    margin: 0 5px 5px 0;
}

.thumbnail:hover{
background-color: transparent;
}

.thumbnail:hover img{
    border: 0px solid blue;
}

.thumbnail span{ /*CSS for enlarged image*/
    position: absolute;
    background-color: transparent;
    padding: 0px;
    left: -1000px;
    border: 0px dashed gray;
    visibility: hidden;
    color: black;
    text-decoration: none;
}

.thumbnail span img{ /*CSS for enlarged image*/
    border-width: 0;
    padding: 20px;
    top: -100px;
}

.thumbnail:hover span{ /*CSS for enlarged image*/
    overflow: visible;
    height:500;
    visibility: visible;
    top: 0;
    left: 610px; /*position where enlarged image should offset horizontally */
    z-index: 50;
}

.pagination a,
.pagination em {
    text-decoration: none;
    font-style: normal;
    letter-spacing: 8pt;
}

.pagination .previous_page,
.pagination .next_page {
    letter-spacing: 3pt;
}


.pagination .previous_page,
.pagination .next_page {
}

.pagination .current {
    font-size: 150%;
    color: #ebc644;
}

#toolbar {
    position: fixed;
}

#toolbar .state {
    display: none;
}
