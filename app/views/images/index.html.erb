<section class="thumbs">
  <ul>
  <% @images.each do |image| %>
      <li>
        <%= link_to image_tag(image.file.thumb), image, 
            :data => {:panel => image.id} %>
      </li>
  <% end %>
  </ul>
</section>
<div class="wrap">
  <div class="fullsize">
  <% unless @images.empty? %>
      <% @images.each do |image| %>
          <div class="mid-size" data-panel="<%=image.id%>">
          <%= image_tag(image.file.medium) %>
        </div>
      <% end %>

  <% else %>
    <div>No images found</div>
  <% end %>
  </div>
</div>
